                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationRatings" class="control-label"></label>
                <input asp-for="LocationRatings" value="@Model.LocationRatings" class="form-control" />
                <span asp-validation-for="LocationRatings" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
